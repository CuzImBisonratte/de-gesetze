                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "bienengefährliche Pflanzenschutzmittel:",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        },
                                                                        "DL": [
                                                                            {
                                                                                "$": {
                                                                                    "Font": "normal",
                                                                                    "Type": "arabic"
                                                                                },
                                                                                "DT": [
                                                                                    "a)",
                                                                                    "b)"
                                                                                ],
                                                                                "DD": [
                                                                                    {
                                                                                        "$": {
                                                                                            "Font": "normal"
                                                                                        },
                                                                                        "LA": [
                                                                                            {
                                                                                                "_": "Pflanzenschutzmittel, die das Bundesamt für Verbraucherschutz und Lebensmittelsicherheit mit der Auflage zugelassen hat, sie als \"bienengefährlich\" zu kennzeichnen,",
                                                                                                "$": {
                                                                                                    "Size": "normal"
                                                                                                }
                                                                                            }
                                                                                        ]
                                                                                    },
                                                                                    {
                                                                                        "$": {
                                                                                            "Font": "normal"
                                                                                        },
                                                                                        "LA": [
                                                                                            {
                                                                                                "_": "andere zugelassene Pflanzenschutzmittel in einer höheren als der höchsten in der Gebrauchsanleitung vorgesehenen",
                                                                                                "$": {
                                                                                                    "Size": "normal"
                                                                                                },
                                                                                                "DL": [
                                                                                                    {
                                                                                                        "$": {
                                                                                                            "Font": "normal",
                                                                                                            "Type": "arabic"
                                                                                                        },
                                                                                                        "DT": [
                                                                                                            "aa)",
                                                                                                            "bb)"
                                                                                                        ],
                                                                                                        "DD": [
                                                                                                            {
                                                                                                                "$": {
                                                                                                                    "Font": "normal"
                                                                                                                },
                                                                                                                "LA": [
                                                                                                                    {
                                                                                                                        "_": "Aufwandmenge oder",
                                                                                                                        "$": {
                                                                                                                            "Size": "normal"
                                                                                                                        }
                                                                                                                    }
                                                                                                                ]
                                                                                                            },
                                                                                                            {
                                                                                                                "$": {
                                                                                                                    "Font": "normal"
                                                                                                                },
                                                                                                                "LA": [
                                                                                                                    {
                                                                                                                        "_": "Konzentration, falls eine Aufwandmenge nicht vorgesehen ist;",
                                                                                                                        "$": {
                                                                                                                            "Size": "normal"
                                                                                                                        }
                                                                                                                    }
                                                                                                                ]
                                                                                                            }
                                                                                                        ]
                                                                                                    }
                                                                                                ]
                                                                                            }
                                                                                        ]
                                                                                    }
                                                                                ]
                                                                            }
                                                                        ]
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "blühende Pflanzen:",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "Pflanzen, an denen sich geöffnete Blüten befinden, außer Hopfen und Kartoffeln.",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
