                        "enbez": [
                            "§ 5"
                        ],
                        "titel": [
                            {
                                "_": "Zusammenarbeit mit den Ländern",
                                "$": {
                                    "format": "parat"
                                }
                            }
                        ]
                    }
                ],
                "textdaten": [
                    {
                        "text": [
                            {
                                "$": {
                                    "format": "XML"
                                },
                                "Content": [
                                    {
                                        "P": [
                                            "Nach der Bildung der Länder wird die Zusammenarbeit mit den Ländern bei der Planung, Finanzierung und Durchführung der Anpassungsmaßnahmen geregelt."
                                        ]
                                    }
                                ]
                            }
                        ]
