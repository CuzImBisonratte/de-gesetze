                ],
                "textdaten": [
                    {
                        "text": [
                            {
                                "$": {
                                    "format": "XML"
                                },
                                "Content": [
                                    {
                                        "P": [
                                            {
                                                "_": "Diese Verordnung gilt nach § 14 des Dritten Überleitungsgesetzes vom 4. Januar 1952 (Bundesgesetzbl. I S. 1) in Verbindung mit § 240 des Bundesentschädigungsgesetzes auch im Land Berlin; ",
                                                "I": [
                                                    "sie gilt nicht im Saarland."
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ],
                        "fussnoten": [
                            {
                                "Content": [
                                    {
                                        "P": [
                                            "§ 2 Kursivdruck: Überholt durch Einführung der V. im Saarland durch G Nr. 658 ABl. des Saarlandes 1959 S. 759"
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "$": {
                    "builddate": "20130405124654",
                    "doknr": "BJNR002810957BJNE000400325"
                },
                "metadaten": [
                    {
                        "jurabk": [
                            "BEGDV 4"
