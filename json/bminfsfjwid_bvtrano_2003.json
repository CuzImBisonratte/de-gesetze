                    {
                        "text": [
                            {
                                "$": {
                                    "format": "XML"
                                },
                                "Content": [
                                    {
                                        "P": [
                                            "Die Anordnung tritt am 1. Juli 2003 in Kraft."
                                        ]
                                    }
                                ]
                            }
                        ]
