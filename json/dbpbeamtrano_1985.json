                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "Ich übertrage",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "den Oberpostdirektionen - soweit sie sich für besondere Fälle die Entscheidung vorbehalten -,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "dem Fernmeldetechnischen Zentralamt,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "dem Posttechnischen Zentralamt,",
                                                                        "$": {
