                                                                "LA": [
                                                                    {
                                                                        "_": "Ich übertrage",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "den Oberpostdirektionen,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "dem Fernmeldetechnischen Zentralamt,",
                                                                        "$": {
