                        "enbez": [
                            "§ 5"
                        ],
                        "titel": [
                            {
                                "_": "Inkrafttreten",
                                "$": {
                                    "format": "parat"
                                }
                            }
                        ]
                    }
                ],
                "textdaten": [
                    {
                        "text": [
                            {
