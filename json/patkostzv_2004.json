                            "PatKostZV"
                        ],
                        "enbez": [
                            "§ 4"
                        ],
                        "titel": [
                            {
                                "_": "Inkrafttreten, Außerkrafttreten",
                                "$": {
                                    "format": "parat"
                                }
                            }
                        ]
                    }
                ],
                "textdaten": [
                    {
                        "text": [
                            {
                                "$": {
                                    "format": "XML"
                                },
                                "Content": [
                                    {
                                        "P": [
                                            "Diese Verordnung tritt am 1. Januar 2004 in Kraft."
                                        ]
                                    }
                                ]
                            }
                        ],
