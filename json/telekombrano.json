                                "Content": [
                                    {
                                        "P": [
                                            {
                                                "_": "Der Vorstand",
                                                "DL": [
                                                    {
                                                        "$": {
                                                            "Font": "normal",
                                                            "Type": "arabic"
                                                        },
                                                        "DT": [
                                                            "1.",
                                                            "1.1",
                                                            "1.2",
                                                            "2.",
                                                            "3.",
                                                            "3.1",
                                                            "3.2",
                                                            "3.3",
                                                            "4.",
                                                            "5.",
                                                            "6.",
                                                            "7."
                                                        ],
                                                        "DD": [
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "Wir übertragen",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "den Oberpostdirektionen,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "dem Fernmeldetechnischen Zentralamt,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "dem Zentralamt für Mobilfunk,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "den Fachhochschulen der Deutschen Bundespost",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "sowie",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "der Fachhochschule des Bundes für öffentliche Verwaltung",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "- Fachbereich Post und Telekommunikation -",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "- je für ihren Geschäftsbereich - die Befugnis,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "nach § 70 des Bundesbeamtengesetzes über die Zustimmung zur Annahme von Belohnungen oder Geschenken zu entscheiden, die Beamten, auch nach Beendigung des Beamtenverhältnisses, in bezug auf ihr Amt gewährt werden,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "nach § 8 Abs. 1 der Verordnung über die Gewährung von Jubiläumszuwendungen an Beamte und Richter des Bundes in der Fassung der Bekanntmachung vom 7. Mai 1965 (BGBl. I S. 410), zuletzt geändert durch die Verordnung vom 22. Januar 1980 (BGBl. I S. 88), Beamten Jubiläumszuwendungen zu gewähren oder zu versagen.",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "Bei Belohnungen oder Geschenken, die einem Beamten nach Beendigung des Beamtenverhältnisses gewährt werden, ist für Entscheidungen nach Abschnitt 1 Nr. 1.1 dieser Anordnung diejenige Behörde zuständig, deren Geschäftsbereich der Beamte zuletzt angehört hat.",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "Wir übertragen",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "den Oberpostdirektionen,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "dem Fernmeldetechnischen Zentralamt,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "dem Zentralamt für Mobilfunk,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "den Fachhochschulen der Deutschen Bundespost",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "sowie",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "der Fachhochschule des Bundes für öffentliche Verwaltung",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "- Fachbereich Post und Telekommunikation -",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "- je für ihren Geschäftsbereich - die Befugnis,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "nach § 64 des Bundesbeamtengesetzes von einem Beamten die Übernahme und Fortführung einer Nebentätigkeit im öffentlichen Dienst zu verlangen,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "nach § 65 Abs. 4 des Bundesbeamtengesetzes einem Beamten Nebentätigkeiten zu genehmigen und zu versagen sowie Genehmigungen zu widerrufen,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "nach § 69a Abs. 3 des Bundesbeamtengesetzes Ruhestandsbeamten und früheren Beamten mit Versorgungsbezügen die Aufnahme einer Beschäftigung oder Erwerbstätigkeit zu untersagen.",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "Soweit Ruhestandsbeamten und früheren Beamten mit Versorgungsbezügen die Aufnahme einer Beschäftigung oder Erwerbstätigkeit untersagt wird, ist für Entscheidungen nach Abschnitt 3 Nr. 3.3 dieser Anordnung diejenige Behörde zuständig, deren Geschäftsbereich der Ruhestandsbeamte und frühere Beamte mit Versorgungsbezügen vor Beendigung des Beamtenverhältnisses zuletzt angehört hat.",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "Wir bestimmen, daß",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "die Oberpostdirektionen,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "das Fernmeldetechnische Zentralamt,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "das Zentralamt für Mobilfunk,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "die Fachhochschulen der Deutschen Bundespost",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "sowie",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "die Fachhochschule des Bundes für öffentliche Verwaltung",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "- Fachbereich Post und Telekommunikation -",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "- je für ihren Geschäftsbereich -",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "nach § 60 des Bundesbeamtengesetzes einem Beamten aus zwingenden dienstlichen Gründen die Führung seiner Dienstgeschäfte verbieten dürfen.",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "Für besondere Fälle behalten wir uns Entscheidungen nach den Abschnitten 1 bis 5 dieser Anordnung vor.",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "Diese Anordnung tritt am Tage nach der Veröffentlichung im Bundesgesetzblatt in Kraft.",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            }
                                                        ]
                                                    }
                                                ],
