                            "§ 1b"
                        ]
                    }
                ],
                "textdaten": [
                    {
                        "text": [
                            {
                                "$": {
                                    "format": "XML"
                                },
                                "Content": [
                                    {
                                        "P": [
                                            {
                                                "_": "(1) Mit nachstehenden Beschränkungen werden zur Vitaminisierung zugelassen: ",
                                                "DL": [
                                                    {
                                                        "$": {
                                                            "Font": "normal",
                                                            "Type": "arabic"
                                                        },
                                                        "DT": [
                                                            "1.",
                                                            "2."
                                                        ],
                                                        "DD": [
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "Vitamin A-acetat und Vitamin A-palmitat für",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        },
                                                                        "DL": [
                                                                            {
                                                                                "$": {
                                                                                    "Font": "normal",
                                                                                    "Type": "arabic"
                                                                                },
                                                                                "DT": [
                                                                                    "a)",
                                                                                    "c)"
                                                                                ],
                                                                                "DD": [
                                                                                    {
                                                                                        "$": {
                                                                                            "Font": "normal"
                                                                                        },
                                                                                        "LA": [
                                                                                            {
                                                                                                "_": "Margarine- und Mischfetterzeugnisse bis zu insgesamt 10 Milligramm auf ein Kilogramm,",
                                                                                                "$": {
                                                                                                    "Size": "normal"
                                                                                                }
                                                                                            },
                                                                                            {
                                                                                                "_": "b) (weggefallen)",
                                                                                                "$": {
                                                                                                    "Size": "normal"
                                                                                                }
                                                                                            }
                                                                                        ]
                                                                                    },
                                                                                    {
                                                                                        "$": {
                                                                                            "Font": "normal"
                                                                                        },
                                                                                        "LA": [
                                                                                            {
                                                                                                "_": "Lebensmittel, die zur Verwendung als Mahlzeit oder anstelle einer Mahlzeit bestimmt sind, bis zu insgesamt 0,9 Milligramm pro Mahlzeit,",
                                                                                                "$": {
                                                                                                    "Size": "normal"
                                                                                                }
                                                                                            }
                                                                                        ]
                                                                                    }
                                                                                ]
                                                                            }
                                                                        ]
                                                                    },
                                                                    {
                                                                        "_": "berechnet als Retinol (Vitamin A-Alkohol);",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "Ergocalciferol, Cholecalciferol und Cholecalciferol-Cholesterin für",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        },
                                                                        "DL": [
                                                                            {
                                                                                "$": {
                                                                                    "Font": "normal",
                                                                                    "Type": "arabic"
                                                                                },
                                                                                "DT": [
                                                                                    "a)",
                                                                                    "c)"
                                                                                ],
                                                                                "DD": [
                                                                                    {
                                                                                        "$": {
                                                                                            "Font": "normal"
                                                                                        },
                                                                                        "LA": [
                                                                                            {
                                                                                                "_": "Margarine- und Mischfetterzeugnisse bis zu insgesamt 25 Mikrogramm auf ein Kilogramm,",
                                                                                                "$": {
                                                                                                    "Size": "normal"
                                                                                                }
                                                                                            },
                                                                                            {
                                                                                                "_": "b) (weggefallen)",
                                                                                                "$": {
                                                                                                    "Size": "normal"
                                                                                                }
                                                                                            }
                                                                                        ]
                                                                                    },
                                                                                    {
                                                                                        "$": {
                                                                                            "Font": "normal"
                                                                                        },
                                                                                        "LA": [
                                                                                            {
                                                                                                "_": "Lebensmittel, die zur Verwendung als Mahlzeit oder anstelle einer Mahlzeit bestimmt sind, bis zu insgesamt 1,6 Mikrogramm pro Mahlzeit,",
                                                                                                "$": {
                                                                                                    "Size": "normal"
                                                                                                }
                                                                                            }
                                                                                        ]
                                                                                    }
                                                                                ]
                                                                            }
                                                                        ]
                                                                    },
                                                                    {
                                                                        "_": "berechnet als Calciferol.",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            }
                                                        ]
                                                    }
                                                ]
                                            },
                                            "(2) Die Vorschriften der Verordnung über Nahrungsergänzungsmittel bleiben unberührt."
                                        ]
                                    }
                                ]
                            }
                        ],
