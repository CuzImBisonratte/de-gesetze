                "textdaten": [
                    {
                        "text": [
                            {
                                "$": {
                                    "format": "XML"
                                },
                                "Content": [
                                    {
                                        "P": [
                                            {
                                                "_": "Generaldirektion Der Vorstand",
                                                "DL": [
                                                    {
                                                        "$": {
                                                            "Font": "normal",
                                                            "Type": "arabic"
                                                        },
                                                        "DT": [
                                                            "1.",
                                                            "1.1",
                                                            "1.2",
                                                            "2.",
                                                            "3.",
                                                            "3.1",
                                                            "3.2",
                                                            "3.3",
                                                            "4.",
                                                            "5.",
                                                            "6."
                                                        ],
                                                        "DD": [
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "Wir übertragen",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "den Oberpostdirektionen und",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "dem Posttechnischen Zentralamt",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "- je für ihren Geschäftsbereich - die Befugnis,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "nach § 70 des Bundesbeamtengesetzes über die Zustimmung zur Annahme von Belohnungen oder Geschenken zu entscheiden, die Beamten, auch nach Beendigung des Beamtenverhältnisses, in bezug auf ihr Amt gewährt werden,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "nach § 8 Abs. 1 der Verordnung über die Gewährung von Jubiläumszuwendungen an Beamte und Richter des Bundes Beamten Jubiläumszuwendungen zu gewähren oder zu versagen.",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "Bei Belohnungen oder Geschenken, die einem Beamten nach Beendigung des Beamtenverhältnisses gewährt werden, ist für Entscheidungen nach Abschnitt 1 Nr. 1.1 dieser Anordnung diejenige Behörde zuständig, deren Geschäftsbereich der Beamte zuletzt angehört hat.",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "Wir übertragen",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "den Oberpostdirektionen - soweit sie sich für besondere Fälle die Entscheidung vorbehalten -, dem Posttechnischen Zentralamt und den Postämtern mit Verwaltungsdienst - je für ihren Geschäftsbereich - die Befugnis,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "nach § 64 des Bundesbeamtengesetzes von einem Beamten die Übernahme und Fortführung einer Nebentätigkeit im öffentlichen Dienst zu verlangen,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "nach § 65 Abs. 4 des Bundesbeamtengesetzes einem Beamten Nebentätigkeiten zu genehmigen und zu versagen sowie Genehmigungen zu widerrufen,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "nach § 69a Abs. 3 des Bundesbeamtengesetzes Ruhestandsbeamten und früheren Beamten mit Versorgungsbezügen die Aufnahme einer Beschäftigung oder Erwerbstätigkeit zu untersagen; zuständig für solche Entscheidungen ist die letzte Beschäftigungsbehörde.",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "Wir bestimmen, daß",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "die Oberpostdirektionen,",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "das Posttechnische Zentralamt und",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "die Postämter mit Verwaltungsdienst",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "- je für ihren Geschäftsbereich -",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    },
                                                                    {
                                                                        "_": "nach § 60 des Bundesbeamtengesetzes einem Beamten aus zwingenden dienstlichen Gründen die Führung seiner Dienstgeschäfte verbieten dürfen.",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "Für besondere Fälle behalten wir uns Entscheidungen nach den Nummern 1 bis 4 dieser Anordnung vor.",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "Diese Anordnung tritt am Tage nach der Veröffentlichung im Bundesgesetzblatt in Kraft.",
                                                                        "$": {
                                                                            "Size": "normal"
                                                                        }
                                                                    }
                                                                ]
                                                            }
                                                        ]
                                                    }
                                                ],
