                        ],
                        "enbez": [
                            "§ 7"
                        ],
                        "titel": [
                            {
                                "_": "Inkrafttreten",
                                "$": {
                                    "format": "parat"
                                }
                            }
                        ]
                    }
                ],
                "textdaten": [
                    {
                        "text": [
                            {
                                "$": {
