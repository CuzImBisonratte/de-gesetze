                            "§ 5"
                        ],
                        "titel": [
                            {
                                "_": "Herstellung im Herkunftsgebiet",
                                "$": {
                                    "format": "XML"
                                }
                            }
                        ]
                    }
                ],
                "textdaten": [
                    {
                        "text": [
                            {
                                "$": {
                                    "format": "XML"
                                },
                                "Content": [
                                    {
                                        "P": [
                                            {
                                                "_": "Eine Uhr ist im Herkunftsgebiet hergestellt, wenn ",
                                                "DL": [
                                                    {
                                                        "$": {
                                                            "Type": "arabic"
                                                        },
                                                        "DT": [
                                                            "1.",
                                                            "2."
                                                        ],
                                                        "DD": [
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    {
                                                                        "_": "folgende Herstellungsstufen vollständig im Gebiet der Stadt Glashütte im Freistaat Sachsen erfolgt sind: ",
                                                                        "DL": [
                                                                            {
                                                                                "$": {
                                                                                    "Type": "alpha"
                                                                                },
                                                                                "DT": [
                                                                                    "a)",
                                                                                    "b)",
                                                                                    "c)",
                                                                                    "d)",
                                                                                    "e)"
                                                                                ],
                                                                                "DD": [
                                                                                    {
                                                                                        "$": {
                                                                                            "Font": "normal"
                                                                                        },
                                                                                        "LA": [
                                                                                            "Montage und das Ingangsetzen des Uhrwerks,"
                                                                                        ]
                                                                                    },
                                                                                    {
                                                                                        "$": {
                                                                                            "Font": "normal"
                                                                                        },
                                                                                        "LA": [
                                                                                            "die Reglage,"
                                                                                        ]
                                                                                    },
                                                                                    {
                                                                                        "$": {
                                                                                            "Font": "normal"
                                                                                        },
                                                                                        "LA": [
                                                                                            "die Montage des Ziffernblatts,"
                                                                                        ]
                                                                                    },
                                                                                    {
                                                                                        "$": {
                                                                                            "Font": "normal"
                                                                                        },
                                                                                        "LA": [
                                                                                            "das Setzen der Zeiger,"
                                                                                        ]
                                                                                    },
                                                                                    {
                                                                                        "$": {
                                                                                            "Font": "normal"
                                                                                        },
                                                                                        "LA": [
                                                                                            "das Einschalen des Uhrwerks und"
                                                                                        ]
                                                                                    }
                                                                                ]
                                                                            }
                                                                        ]
                                                                    }
                                                                ]
                                                            },
                                                            {
                                                                "$": {
                                                                    "Font": "normal"
                                                                },
                                                                "LA": [
                                                                    "in den wesentlichen Herstellungsstufen zusammen mehr als 50 Prozent der Wertschöpfung im Herkunftsgebiet erzielt wurde."
                                                                ]
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
